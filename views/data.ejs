<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./css/bootstrap.min.css">
  <link rel="stylesheet" href="./css/main.css">
  <script src="./js/jquery-3.1.1.min.js"></script>
  <script src="./js/bootstrap.min.js"></script>
  <script src="./js/main.js"></script>
</head>
<body>
  <div class="container">
    <!-- Fixed navbar -->
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Content Management System</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
              <li class="active"><a href="/data">Data</a></li>
              <li><a href="/dates">Data Date</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/login">Logout</a></li>
            </ul>
          </div>
        </div>
      </nav>

    <!-- Add Button -->
      <button id="btn-add" type="button" class="btn btn-primary" aria-label="Left Align">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> add
      </button>
      <br><br><br>

    <!-- notification -->
      <div id="notification"></div>

    <!-- add section -->
      <div id="panel-add" class="panel panel-default">
        <div class="panel-body">
          <form class="form-inline">
            <div class="form-group">
              <label for="Letter">Letter</label>
              <input type="text" class="form-control-upd" id="txt-letter-add" placeholder="A" style="text-transform: uppercase">
            </div>
            <div class="form-group">
              <label for="Frequency">Frequency</label>
              <input type="text" class="form-control-upd" id="txt-freq-add" placeholder="0.0000">
            </div>
            <button id="btn-add-save" type="button" class="btn btn-default" aria-label="Left Align">
                save
            </button>
          </form>
        </div>
      </div>

    <!-- update section -->
      <div id="panel-upd" class="panel panel-default">
        <div class="panel-body">
          <form class="form-inline">
            <div class="form-group">
              <label for="Letter">Letter</label>
              <input type="text" class="form-control-upd" id="txt-letter-upd" placeholder="A" style="text-transform: uppercase">
            </div>
            <div class="form-group">
              <label for="Frequency">Frequency</label>
              <input type="text" class="form-control-upd" id="txt-freq-upd" placeholder="0.0000">
            </div>
            <button id="btn-update" type="button" class="btn btn-default" aria-label="Left Align">
                save
            </button>
          </form>
        </div>
      </div>

    <!-- Search Tab -->
    <fieldset>
        <legend>Search</legend>
        <!-- Form -->
        <form class="form-inline">
          <div class="form-group">
            <label for="Letter">letter</label>
            <input type="text" class="form-control" id="txt-letter" placeholder="A" style="text-transform: uppercase">
          </div>
          <div class="form-group">
            <label for="Frequency">Frequency</label>
            <input type="text" class="form-control" id="txt-freq" placeholder="0.0000">
          </div>
          <!--data content table-->
            <div id="content"></div>
        </form>
    </fieldset>

  </div>
</body>
</html>
